<UserControl x:Class="Overlays.HotKeys.ActionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:ClassModifier="internal">
    <UserControl.Template>
        <ControlTemplate>
            <Grid>
                <TextBlock Name="action" TextWrapping="Wrap" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=HotKeyAction}" Foreground="LightGreen"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
