        <Image Margin="0,22,0,0" Name="imageMinerals" Stretch="None" VerticalAlignment="Top" Source="/Overlays;component/Images/bar-minerals.png" HorizontalAlignment="Left" MouseEnter="shyControl" />
        <Image HorizontalAlignment="Left" Margin="0,48,0,0" Name="imageGas" Source="/Overlays;component/Images/bar-gas.png" Stretch="None" VerticalAlignment="Top"  MouseEnter="shyControl" />
        <Image HorizontalAlignment="Left" Margin="0,74,0,0" Name="imageSupply" Source="/Overlays;component/Images/bar-supply.png" Stretch="None" VerticalAlignment="Top"  MouseEnter="shyControl" />
        <Image HorizontalAlignment="Left" Margin="97,95,0,0" Name="imageSupplyHelper" Source="/Overlays;component/Images/bar-supply-helper.png" Stretch="None" VerticalAlignment="Top" />
    </Grid>
</UserControl>
