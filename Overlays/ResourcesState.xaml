             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:my="clr-namespace:Overlays" mc:Ignorable="d" 
             d:DesignHeight="193" d:DesignWidth="226" Loaded="UserControl_Loaded">
