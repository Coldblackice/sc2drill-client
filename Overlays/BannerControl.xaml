<UserControl x:Class="Overlays.BannerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Common="clr-namespace:Probe.Common;assembly=Probe.Common" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Black">
    <UserControl.Resources>
        <Common:Paths x:Key="paths"/>
    </UserControl.Resources>
    <Grid>
        <Image Name="imageControl" Stretch="Uniform" Source="{Binding Source={StaticResource paths}, Path=LogoImagePath}" VerticalAlignment="Center" />
    </Grid>
</UserControl>
